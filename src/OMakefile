###################################################################### PACKAGES

PACKS_graphics[]=
  graphics

PACKS_lablgtk2[]=
  lablgtk2

OCAMLPACKS[]=
  graphics lablgtk2

################################################################## C BUILD RULE

CFLAGS+= -fPIC -I $(OCAML_WHERE)

MakeLibC(name) =
  CFILES_VAR = $(if $(mem $(name), $(SUBPACKAGES)), CFILES_$(name), CFILES_$(name)_na)
  OCamlMkLibC($(LIBRARY_PREFIX)_$(name), $(getvar $(CFILES_VAR)), $(getvar LDFLAGS_$(name)))

################################################################# ML BUILD RULE

MakeLibOCaml(name) =

  OCAMLPACKS= 
    try
      getvar(PACKS_$(name))
    default
      array() # default is empty

  try
    getvar(CFILES_$(name))
    # CFILES_$(name) exists: library with C
    $(LIBRARY_PREFIX)_$(name).cma $(LIBRARY_PREFIX)_$(name).cmxa: $(MakeLibC $(name))
    # OCAML_{BYTE,NATIVE}_LINK_FLAGS do not work for OCamlLibrary
    # Bit dirty workaround
    OCAMLCFLAGS+=-dllib -l$(LIBRARY_PREFIX)_$(name)
    OCAMLOPTFLAGS+=-cclib -l$(LIBRARY_PREFIX)_$(name)
    # use mapprefix instead of addprefix, otherwise "-cclib -lgif"
    # is considered one option.
    OCAML_LIB_FLAGS=-linkall $(mapprefix -cclib, $(getvar LDFLAGS_$(name)))
    OCamlLibrary($(LIBRARY_PREFIX)_$(name), $(getvar FILES_$(name)))
  default
    # pure ocaml library
    OCAML_LIB_FLAGS=
      try
        -linkall $(mapprefix -cclib, $(getvar LDFLAGS_$(name)))
      default
        array()
    OCamlLibrary($(LIBRARY_PREFIX)_$(name), $(getvar FILES_$(name)))

LIBRARIES=
  # CR jfurue: lablgtk2, freetype and graphics may not be buildable
  foreach(i, core gif png jpeg tiff xpm ps lablgtk2 freetype graphics)
    MakeLibOCaml($(i))

libraries: $(LIBRARIES)

clean:
  rm -f $(LIBRARY_PREFIX).spot
  rm -f $(filter-proper-targets $(ls R, .))

LocalOCamlGeneratedFiles(camlimages.ml)
ConfReplaceAt(camlimages.ml)

ConfReplaceAt(META)

all: libraries META

install: all
  $(OCAMLFIND) install $(LIBRARY_PREFIX) \
    META \
    $(glob i, *.mli) \
    $(glob i, *.cmi) \
    $(glob i, *.spot) \
    $(glob i, *.spit) \
    $(glob i, *.cma) \
    $(glob i, *.cmxa) \
    $(glob i, *.a) \
    $(glob i, *.so)

